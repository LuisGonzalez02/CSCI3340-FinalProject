    <main role="main" >
    

      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron" style="background-color:#4A195D">
        <div class="container">
          <h1 class="display-3" align="center">Escape A Date</h1>
       
          <p style="text-decoration-color: #FFFFFF" align="center">
            <%=Time.now.strftime("%H:%M")%>
